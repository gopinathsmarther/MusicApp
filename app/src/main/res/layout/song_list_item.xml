<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/song_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:id="@+id/default_grid_layout"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="2"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/audio_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/no_audio_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey"
                android:alpha="0.6"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/fontawesome"
                android:gravity="center"
                android:text="@string/fa_music"
                android:textColor="@color/white"
                android:textSize="34sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
    <LinearLayout
        android:id="@+id/grid_style_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:visibility="gone"
        android:background="@drawable/circle_songlist_1"
        >


            <ImageView
                android:id="@+id/audio_image_circle"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:visibility="gone"/>

        <TextView

            android:id="@+id/no_audio_image_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fontawesome"
            android:gravity="center"
            android:text="@string/fa_music"
            android:textColor="@color/white"
            android:textSize="34sp" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/audio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:text=""
            android:singleLine="true"
            android:paddingStart="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/audio_authur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:paddingStart="8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/other_option"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:background="?android:attr/actionBarItemBackground">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="4sp"
            android:text="@string/fa_circle"
            android:fontFamily="@font/fontawesome"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="4sp"
            android:text="@string/fa_circle"
            android:fontFamily="@font/fontawesome"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="4sp"
            android:text="@string/fa_circle"
            android:fontFamily="@font/fontawesome"
            android:layout_marginTop="2dp"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>