<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">
        <LinearLayout
            android:id="@+id/timer_alert_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sleep Timer"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/helvetica"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/timer_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 min"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="12dp"
                android:fontFamily="@font/helvetica"
                android:layout_gravity="center"/>

            <SeekBar
                android:id="@+id/progress_seekBar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:max="100"
                android:maxHeight="4dp"
                android:minHeight="2dp"
                android:progressBackgroundTint="@color/light_grey"
                android:progressTint="@color/white"
                android:thumb="@drawable/thumb_circle"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical|end">
                <TextView
                    android:id="@+id/cancel_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCEL"
                    android:textColor="@color/white"
                    android:fontFamily="@font/helvetica"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/current_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/helvetica"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp"
                    android:layout_marginStart="12dp"/>
                <TextView
                    android:id="@+id/set_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SET"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/helvetica"
                    android:layout_marginStart="12dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
