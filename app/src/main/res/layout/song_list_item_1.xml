<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:id="@+id/song_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/default_grid_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/audio_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/no_audio_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/light_grey"
                    android:alpha="0.6"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_music"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:fontFamily="@font/fontawesome"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/grid_style_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:visibility="gone"
            android:background="@drawable/circle_songlist_2"
            android:orientation="vertical"
            >


            <ImageView
                android:id="@+id/audio_image_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/no_audio_image_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_music"
                android:textSize="48sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:fontFamily="@font/fontawesome"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/audio_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:text=""
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"/>
                <TextView
                    android:id="@+id/audio_authur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:textSize="12sp"
                    android:text=""
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/light_grey"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/other_option"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:background="?android:attr/actionBarItemBackground"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="4sp"
                    android:text="@string/fa_circle"
                    android:fontFamily="@font/fontawesome"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="4sp"
                    android:text="@string/fa_circle"
                    android:fontFamily="@font/fontawesome"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="4sp"
                    android:text="@string/fa_circle"
                    android:fontFamily="@font/fontawesome"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>