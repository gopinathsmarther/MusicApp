<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/artist_details_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.ArtistsDetailsActivity"
    android:background="@drawable/theme_1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/navigate_back"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|bottom"
            android:layout_marginStart="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:alpha="0.6"
                android:src="@drawable/ic_back"
                android:background="?android:attr/actionBarItemBackground"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="invisible"/>
        <LinearLayout
            android:id="@+id/artist_to_search"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fontawesome"
                android:text="@string/fa_search"
                android:alpha="0.6"
                android:background="?android:attr/actionBarItemBackground"/>
        </LinearLayout>
    </LinearLayout>
  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:fillViewport="true">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp"
              android:layout_marginTop="16dp"
              android:layout_marginBottom="8dp">
              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="180dp"
                  android:gravity="center"
                  android:orientation="vertical">
                  <ImageView
                      android:id="@+id/album_art_display"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:layout_gravity="center"
                      android:visibility="gone"
                      android:scaleType="fitXY"/>

                  <RelativeLayout
                      android:id="@+id/no_artist_image"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent">
                      <View
                          android:layout_width="match_parent"
                          android:layout_height="match_parent"
                          android:background="@color/light_grey"
                          android:alpha="0.6"/>
                      <TextView

                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="@string/fa_music"
                          android:textSize="48sp"
                          android:gravity="center"
                          android:layout_centerInParent="true"
                          android:textColor="@color/white"
                          android:fontFamily="@font/fontawesome"/>
                  </RelativeLayout>


              </LinearLayout>

              <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_marginStart="8dp">
                  <TextView
                      android:id="@+id/artist_name"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:fontFamily="@font/roboto_regular"
                      android:textSize="16sp"
                      android:layout_marginTop="8dp"/>
                  <TextView
                      android:id="@+id/artist_album_song"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:fontFamily="@font/helvetica"
                      android:textSize="14sp"
                      android:alpha="0.6"
                      android:layout_marginTop="4dp"/>
                  <TextView
                      android:id="@+id/songs_in_artist_count"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textColor="@color/white"
                      android:fontFamily="@font/helvetica"
                      android:textSize="14sp"
                      android:alpha="0.6"
                      android:layout_marginTop="4dp"/>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="0dp"
                      android:layout_weight="1" />
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="32dp"
                      android:gravity="center|end">
                      <ImageView
                          android:id="@+id/shuffle_in_artist"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:src="@drawable/ic_shuffle"
                          android:alpha="0.6"
                          android:background="?android:attr/actionBarItemBackground"/>

                      <ImageView
                          android:id="@+id/artist_more_option"
                          android:layout_width="24dp"
                          android:layout_height="24dp"
                          android:layout_marginStart="20dp"
                          android:src="@drawable/ic_more_option"
                          android:background="?android:attr/actionBarItemBackground"/>
                  </LinearLayout>
              </LinearLayout>

          </LinearLayout>
          <androidx.core.widget.NestedScrollView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:fillViewport="true"
              android:layout_marginStart="8dp"
              android:layout_marginEnd="8dp">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical">
                  <!--            android:id="@+id/album_title_textview"-->
                  <TextView

                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:gravity="center_vertical"
                      android:text="@string/albums"
                      android:singleLine="true"
                      android:textColor="@color/white"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:fontFamily="@font/roboto_regular"
                      />
                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/artist_detail_albums_recycler"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:adjustViewBounds="true"
                      android:clipToPadding="false"
                      android:layout_marginTop="4dp"
                      android:nestedScrollingEnabled="false"
                      />
                  <TextView
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center_vertical"
                      android:gravity="center_vertical"
                      android:text="@string/songs"
                      android:singleLine="true"
                      android:textColor="@color/white"
                      android:textSize="20sp"
                      android:textStyle="bold"
                      android:fontFamily="@font/roboto_regular"
                      />
                  <androidx.recyclerview.widget.RecyclerView
                      android:id="@+id/artist_detail_song_recycler"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:adjustViewBounds="true"
                      android:clipToPadding="false"
                      android:layout_marginTop="4dp"
                      android:nestedScrollingEnabled="false"
                      />


              </LinearLayout>

          </androidx.core.widget.NestedScrollView>
      </LinearLayout>
  </ScrollView>
</LinearLayout>