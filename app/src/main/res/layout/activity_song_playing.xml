<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song_gradient"
    android:orientation="vertical"
    tools:context=".Activity.SongPlayingActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_marginTop="4dp">
        <LinearLayout
            android:id="@+id/close_play_button"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_drop_down"
                android:layout_marginStart="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PLAYING FROM"
                android:singleLine="true"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/song_album_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/other_option"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="4sp"
                android:text="@string/fa_circle"
                android:fontFamily="@font/fontawesome"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="4sp"
                android:text="@string/fa_circle"
                android:fontFamily="@font/fontawesome"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="4sp"
                android:text="@string/fa_circle"
                android:fontFamily="@font/fontawesome"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_centerInParent="true"
            app:cardCornerRadius="120dp"
            app:cardElevation="0dp">
            <ImageView
                android:id="@+id/song_image"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:visibility="gone"
                />
            <RelativeLayout
                android:id="@+id/no_audio_image"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_gravity="center"
                >

                <View
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:alpha="0.6"
                    android:background="@drawable/circle_light_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fa_music"
                    android:textSize="48sp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:fontFamily="@font/fontawesome"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/circularSeekBar"
            android:layout_width="256dp"
            android:layout_height="256dp"
            app:cs_circle_progress_color="@color/white"
            app:cs_circle_color="@android:color/transparent"
            app:cs_circle_stroke_width="4dp"
            app:cs_pointer_color="@color/white"
            android:layout_centerInParent="true"
            app:cs_pointer_stroke_width="8dp" />
        <TextView
            android:id="@+id/timing_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="92dp" />
<!--        <TextView-->
<!--            android:id="@+id/song_time_textview"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="sasasasas"-->
<!--            android:textColor="@color/black"-->
<!--            android:textSize="12sp"-->
<!--            android:textStyle="bold"-->
<!--            android:fontFamily="@font/helveticaneue_medium"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_centerInParent="true"-->
<!--            android:layout_alignEnd="@+id/timing_textview"-->
<!--            android:layout_marginBottom="56dp"-->
<!--            android:background="@color/light_grey"/>-->
    </RelativeLayout>
    <!--    app:cs_circle_color="@android:color/transparent"-->
    <!--    app:cs_circle_color="@color/white"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <LinearLayout
            android:id="@+id/swipe_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:layout_width="52dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/favourite_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:fontFamily="@font/fontawesome"
                    android:text="@string/fa_heart_o"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:background="?android:attr/actionBarItemBackground"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/song_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text=""
                    android:singleLine="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/artist_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:fontFamily="@font/roboto_regular" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/queue_music"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/ic_queue_music"
                    android:background="?android:attr/actionBarItemBackground"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:id="@+id/repeat_song"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/song_repeat_imageview"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_order"
                    android:background="?android:attr/actionBarItemBackground"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/skip_previous_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="12dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_skip_previous"
                    android:background="?android:attr/actionBarItemBackground"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="60dp"
                android:layout_height="44dp"
                android:layout_marginStart="12dp"
                android:src="@drawable/ic_play" />
            <LinearLayout
                android:id="@+id/skip_next_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginStart="12dp">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_skip_next"
                    android:background="?android:attr/actionBarItemBackground"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/shuffle_layout"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:layout_marginStart="12dp">

                <ImageView
                    android:id="@+id/shuffle_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:background="?android:attr/actionBarItemBackground"
                    android:src="@drawable/ic_shuffle_grey" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:id="@+id/song_volume"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/ic_volume"
                    android:background="?android:attr/actionBarItemBackground"/>
            </LinearLayout>
            <TextView
                android:id="@+id/song_count"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1/1"
                android:singleLine="true"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <LinearLayout
                android:id="@+id/share_app"
                android:layout_width="52dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_share"
                    android:layout_gravity="center_vertical|end"
                    android:background="?android:attr/actionBarItemBackground"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>