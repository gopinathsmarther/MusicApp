<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/background_of_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        tools:context=".Activity.HomeScreen"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:gravity="center">
                    <LinearLayout
                        android:id="@+id/toggle_drawer"
                        android:layout_width="52dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">
                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginLeft="16dp"
                            android:src="@drawable/tab_button"
                            android:background="?android:attr/actionBarItemBackground"
                            android:layout_marginStart="16dp" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                        android:text="Musico Player"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/search_navigation"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="@string/fa_search"
                            android:textColor="@color/white"
                            android:gravity="center"
                            android:textSize="16sp"
                            android:background="?android:attr/actionBarItemBackground"
                            android:fontFamily="@font/fontawesome" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent"
                        android:gravity="center">
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Pro"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:background="@drawable/white_rounded_stroke_background"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/other_option"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:background="?android:attr/actionBarItemBackground"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/fontawesome"
                            android:gravity="center_vertical"
                            android:text="@string/fa_circle"
                            android:textColor="@color/white"
                            android:textSize="4sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="4sp"
                            android:text="@string/fa_circle"
                            android:fontFamily="@font/fontawesome"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:textSize="4sp"
                            android:text="@string/fa_circle"
                            android:fontFamily="@font/fontawesome"
                            android:layout_marginTop="2dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:fillViewport="true"
                    android:scrollbars="none">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:id="@+id/suggested_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:background="?android:attr/actionBarItemBackground">

                            <TextView
                                android:id="@+id/suggested_textview"
                                android:layout_width="120dp"
                                android:layout_height="46dp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:text="SUGGESTED"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                            <View
                                android:id="@+id/suggested_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="visible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/songs_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="?android:attr/actionBarItemBackground">

                            <TextView
                                android:id="@+id/songs_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="46dp"
                                android:text="SONGS"
                                android:textColor="@color/light_white"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"/>
                            <View
                                android:id="@+id/songs_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="invisible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/albums_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="?android:attr/actionBarItemBackground">
                            <TextView
                                android:id="@+id/albums_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="46dp"
                                android:text="ALBUMS"
                                android:textColor="@color/light_white"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"/>
                            <View
                                android:id="@+id/albums_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="invisible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/artist_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="?android:attr/actionBarItemBackground">
                            <TextView
                                android:id="@+id/artist_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="46dp"
                                android:text="ARTISTS"
                                android:textColor="@color/light_white"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"/>
                            <View
                                android:id="@+id/artist_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="invisible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/playlist_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="?android:attr/actionBarItemBackground">
                            <TextView
                                android:id="@+id/playlist_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="46dp"
                                android:text="PLAYLISTS"
                                android:textColor="@color/light_white"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"/>
                            <View
                                android:id="@+id/playlist_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="invisible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/folders_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="?android:attr/actionBarItemBackground">
                            <TextView
                                android:id="@+id/folders_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="46dp"
                                android:text="FOLDERS"
                                android:textColor="@color/light_white"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"/>
                            <View
                                android:id="@+id/folders_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="invisible"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/genres_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="?android:attr/actionBarItemBackground">
                            <TextView
                                android:id="@+id/genres_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="46dp"
                                android:text="GENRES"
                                android:textColor="@color/light_white"
                                android:gravity="center"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_regular"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"/>
                            <View
                                android:id="@+id/genres_view"
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/colorAccent"
                                android:visibility="invisible"/>
                        </LinearLayout>
                    </LinearLayout>
                </HorizontalScrollView>
                <!--    <FrameLayout-->
                <!--        android:layout_width="match_parent"-->
                <!--        android:layout_height="0dp"-->
                <!--        android:layout_weight="1"-->
                <!--        android:id="@+id/container"/>-->
                <androidx.viewpager.widget.ViewPager
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/home_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />
            </LinearLayout>
        </ScrollView>
        <androidx.cardview.widget.CardView
            android:id="@+id/song_play_cardview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:cardElevation="2dp"
            app:cardCornerRadius="0dp"
            android:visibility="gone"
            >
            <LinearLayout
                android:id="@+id/song_play_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/audio_image_cardview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardElevation="2dp"
                        app:cardCornerRadius="4dp"
                        android:layout_margin="4dp">
                        <ImageView
                            android:id="@+id/audio_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY" />
                    </androidx.cardview.widget.CardView>
                    <RelativeLayout
                        android:id="@+id/no_audio_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:layout_margin="4dp">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/light_grey"
                            android:alpha="0.6"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fa_music"
                            android:textSize="48sp"
                            android:gravity="center"
                            android:layout_centerInParent="true"
                            android:textColor="@color/white"
                            android:fontFamily="@font/fontawesome"/>
                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/audio_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="16sp"
                        android:text=""
                        android:paddingStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/white"/>
                    <TextView
                        android:id="@+id/audio_authur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:text=""
                        android:paddingStart="8dp"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/white"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/play_icon"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_pause_black_24dp"
                        android:tint="@color/colorAccent"
                        android:background="?android:attr/actionBarItemBackground"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/queue_music"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_queue_music"
                        android:tint="@color/colorAccent"
                        android:background="?android:attr/actionBarItemBackground"
                        />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <!--        <ImageView-->
        <!--            android:layout_width="52dp"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:src="@drawable/music" />-->
        <RelativeLayout
            android:id="@+id/no_audio_image"
            android:layout_width="44dp"
            android:layout_height="44dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_grey"
                android:alpha="0.6"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fa_music"
                android:textSize="32sp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:fontFamily="@font/fontawesome"/>
        </RelativeLayout>




        <LinearLayout
            android:id="@+id/currentSongpage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/playing_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:text="song"
                android:textSize="10sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/playing_song_artist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="unknown"
                    android:singleLine="true"
                    android:layout_marginEnd="4dp"
                    android:textSize="10sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fontawesome"
                    android:gravity="center_vertical"
                    android:text="@string/fa_circle"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp"
                    android:textSize="4sp" />
                <TextView
                    android:id="@+id/playing_song_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:text="foldername"
                    android:textSize="10sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/play_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_play" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/queue_music1"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_queue_music"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
